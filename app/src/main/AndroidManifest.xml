<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.expm">

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/expm_svg_with_bg"
        android:label="@string/app_name"
        android:roundIcon="@drawable/expm_svg_with_bg"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExpM">

        <activity
            android:name=".activity.MainActivity"
            android:exported="false" />

        <activity
            android:name=".activity.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.ExpM.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.AddEntryActivity"
            android:exported="false" />

        <activity
            android:name=".activity.AnalyticsActivity"
            android:exported="false"
            android:parentActivityName=".activity.MainActivity" />

        <activity
            android:name=".activity.AboutActivity"
            android:exported="false"
            android:parentActivityName=".activity.MainActivity" />

    </application>

</manifest>