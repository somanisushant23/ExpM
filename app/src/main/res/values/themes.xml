<resources>
    <!-- Base application theme. -->
    <style name="Theme.ExpM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Splash theme: uses a windowBackground drawable for the native launch screen -->
    <style name="Theme.ExpM.Splash" parent="Theme.ExpM">
        <item name="android:windowBackground">@drawable/splash_window_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>